<!-- JS FUNCTIONS -->
<script>
/* MATRIX RAIN EFFECT */
const canvas = document.getElementById("matrix");
const ctx = canvas.getContext("2d");

canvas.height = window.innerHeight;
canvas.width = window.innerWidth;

const letters = "01";
const fontSize = 16;
const columns = canvas.width / fontSize;
let drops = [];

for (let i = 0; i < columns; i++) drops[i] = 1;

function drawMatrix() {
    ctx.fillStyle = "rgba(0,0,0,0.05)";
    ctx.fillRect(0, 0, canvas.width, canvas.height);
    ctx.fillStyle = "#0f0";
    ctx.font = fontSize + "px monospace";

    for (let i = 0; i < drops.length; i++) {
        let text = letters[Math.floor(Math.random() * letters.length)];
        ctx.fillText(text, i * fontSize, drops[i] * fontSize);

        if (drops[i] * fontSize > canvas.height && Math.random() > 0.95)
            drops[i] = 0;

        drops[i]++;
    }
}
setInterval(drawMatrix, 35);

/* SYSTEM SCAN */
function runScan() {
    document.getElementById("scanStatus").innerHTML = "Scanning...";
    setTimeout(() => {
        document.getElementById("scanStatus").innerHTML = "Scan Complete: 2 threats detected!";
    }, 2000);
}

/* MALWARE ANALYSIS */
function analyzeMalware() {
    const file = document.getElementById("fileUpload").value;
    if (!file) {
        alert("Upload file dulu!");
        return;
    }
    document.getElementById("malwareResult").innerHTML = "Analyzing file...";
    setTimeout(() => {
        document.getElementById("malwareResult").innerHTML = "Result: File is SAFE ‚úî";
    }, 2000);
}

/* TERMINAL COMMANDS */
function runCommand(e) {
    if (e.key === "Enter") {
        const input = document.getElementById("terminal-input").value;
        const box = document.getElementById("terminal-box");

        box.innerHTML += "<br>> " + input;

        if (input === "help")
            box.innerHTML += "<br>Commands: scan, clear, help";
        if (input === "scan")
            box.innerHTML += "<br>Running quick scan... OK ‚úî";
        if (input === "clear")
            box.innerHTML = "";

        document.getElementById("terminal-input").value = "";
        box.scrollTop = box.scrollHeight;
    }
}
</script>

