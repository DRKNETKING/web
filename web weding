  <script>
    function submitRSVP(e){
      e.preventDefault();
      const data={name:document.getElementById('name').value.trim(),email:document.getElementById('email').value.trim(),attend:document.getElementById('attend').value,guests:document.getElementById('guests').value,note:document.getElementById('note').value};
      if(!data.name||!data.email||!data.attend){alert('Please complete required fields');return false}
      // Simpan ke localStorage (karena Odoo local - integrasi ke backend bisa ditambahkan di module)
      const list=JSON.parse(localStorage.getItem('rsvps')||'[]');list.push(Object.assign({date:new Date().toISOString()},data));localStorage.setItem('rsvps',JSON.stringify(list));
      alert('RSVP terkirim. Terima kasih!');
      e.target.reset();
      return false;
    }
    function openLightbox(src){document.getElementById('lbimg').src=src;document.getElementById('lightbox').classList.add('show')}
    function closeLightbox(e){if(e.target.id==='lightbox'){document.getElementById('lightbox').classList.remove('show')}}
  </script>
